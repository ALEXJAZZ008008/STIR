# Sample file (by Kris Thielemans)
# Use this file to modify defaults for some variables in Makefile_common
# Modify according to your own needs

# find hostname
ifeq (0,${MAKELEVEL})
host-name := $(shell hostname)
MAKE := ${MAKE} host-name=${host-name}
endif

# set non-default location of Louvain la Neuve files 
LLN_INCLUDE_DIR=$(WORKSPACE)/../../lln/ecat

# Below, this file only sets EXTRA_OPT
# Changes w.r.t. defaults:
# use all warnings,
# use debug flag -g even in optimised mode
# so, set EXTRA_OPT=-g -Wall
# for some systems, do more...

EXTRA_OPT+=-D ENABLE_DENSEL
ifeq ($(SYSTEM),LINUX)

ifneq (,$(findstring beo,$(host-name)))
# the beowulf cluster has Athlon processors
EXTRA_OPT+=-g -Wall -march=athlon
CXX=g++-3.0
CC=gcc-3.0
INSTALL_DIR=/apps/prod/STIRbin/
else
# our Linux system has Pentium III processors
EXTRA_OPT+=-g -Wall -march=pentium3
ifeq (,$(findstring feynman,$(host-name)))
LLN_INCLUDE_DIR=/pp2-data/kris/lln/ecat
endif
endif

else

ifeq ($(SYSTEM),CYGWIN)
ifneq (,$(findstring petnt1,$(host-name)))
# this NT system has Pentium II processors
EXTRA_OPT+=-march=pentium2
else
ifneq (,$(findstring thiefob,$(host-name)))
# this NT system has Pentium II processors
EXTRA_OPT+=-march=pentium2
else
EXTRA_OPT+=-march=pentium3 
#-mfpmath=sse
endif
endif
# cygwin can't find X include files by default
EXTRA_OPT+=-g -Wall -I /usr/X11R6/include
else

ifeq ($(SYSTEM),CC)
# our Parsytec CC system has gcc 2.8.1, so we don't use -Wall 
# and have to set the template depth
EXTRA_OPT+= -ftemplate-depth-25
else

ifeq ($(SYSTEM),SUN)
LLN_INCLUDE_DIR=/home/kris/lln/ecat
INSTALL_DIR=/home/kris/bin/SOL2
else

# default
EXTRA_OPT+=-g -Wall
endif
endif
endif
endif

