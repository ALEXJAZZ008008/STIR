
# This is the top of our own project tree
project-root ;

sources = ;

STIR_ROOT = ./ ;

subinclude buildblock ;

  dll stir
    : $(sources)
    : <include>./include
      <define>STIR_DEVEL
      ;
  
  lib stir
    : # sources
      $(sources)
    : <include>./include
      <define>STIR_DEVEL
      ;  

  stage bin-stage : <dll>stir <lib>stir
    : <tag><debug>"_debug"
    :
        debug release
    ;


template stir-dll
    : <dll>stir
    : <include>$(STIR_ROOT)/include
      <define>STIR_DEVEL
    ;
